<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size75"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bottom_payment_method_color">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_dash_line_shape"
        android:padding="13.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-1dp"
        android:layout_marginLeft="-1dp"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_total_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:textColor="@color/black"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:text="237.57"
                    android:textColor="@color/header_font_color"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginRight="@dimen/dimen_size7_25"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_total_amount_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD"
                    android:textSize="14sp"
                    android:textColor="@color/header_font_color"
                    android:fontFamily="@font/roboto_bold"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="power by"
                android:textStyle="italic"
                android:textSize="8sp"
                android:textColor="#A9A9A9"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="@dimen/dimen_size7_25"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill24"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="3dp"
                    app:dividerColor="#707070"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V1.0.0.0"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>


</FrameLayout>